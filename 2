 <script>
document.getElementById('jastip-form').addEventListener('submit', function(e) {
    e.preventDefault();

    const name = document.getElementById('name').value;
    const email = document.getElementById('email').value;
    const message = document.getElementById('message').value;

    // Nomor WA tujuan
    const waNumber = "6289531547651";

    // Pesan WhatsApp
    const waText = 
`Hallo, saya ingin melakukan JASTIP:
Nama: ${name}
Email: ${email}

Pesanan:
${message}

Terima kasih`;

    // Buka WhatsApp
    window.open("https://wa.me/" + waNumber + "?text=" + encodeURIComponent(waText), "_blank");
});
</script>


